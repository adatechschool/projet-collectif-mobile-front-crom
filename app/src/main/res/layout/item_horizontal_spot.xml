<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    >

    <!-- Ici on dÃ©termine l'apparence de l'image -->
    <ImageView
        android:src="@drawable/nazare"
        android:id="@+id/spot_image"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/spot_name"
            style="@style/DefaultTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/detail_page_title" />
        <TextView
            android:id="@+id/spot_location"
            style="@style/SubtitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/detail_page_address" />

    </LinearLayout>



</LinearLayout>